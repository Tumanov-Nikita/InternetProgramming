

@{
    ViewBag.Title = "Редактировать объявление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WeBudget.Models.Notice

<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title>MуBudget</title>
    <link rel="stylesheet" href="~/Content/styles.css" type="text/css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,300" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <title>Выравнивание фотографии по центру</title>
</head>


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<style>
    .fig {
        text-align: center;
    }


    .center {
        width: 700px;
        padding: 10px 250px;
        margin: 0;
        font-size: 14px !important;
    }
</style>




<div class="container">
    <h2>Объявление № @Model.Id</h2>
    @using (Html.BeginForm("EditNotice", "Notice", FormMethod.Post))
    {

        using (Html.BeginForm())
        {

            <p>
                @Html.LabelFor(model => model.name, "Наименование")
            </p>
            <p>
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name)
            </p>
            <p>
                @Html.LabelFor(model => model.picFileName, "Изображение")
            </p>
            <p>
                @Html.EditorFor(model => model.picFileName)
                @Html.ValidationMessageFor(model => model.picFileName)
            </p>
            <p>
                @Html.LabelFor(model => model.price, "Цена")
            </p>
            <p>
                @Html.EditorFor(model => model.price)
                @Html.ValidationMessageFor(model => model.price)

            </p>

            <p>
                @Html.LabelFor(model => model.text, "Текст объявления")
            </p>
            <br>
            <p>
                @Html.EditorFor(model => model.text)
                @Html.ValidationMessageFor(model => model.text)
            </p>

            using (Html.BeginForm("FileUploaded", "NoticeController", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <label for="file">Upload Image:</label>
                <input type="file" name="file" id="file" style="width: 100%;" />
                <input type="submit" value="Редактировать" class="submit" />
            }
        }
    }
</div>