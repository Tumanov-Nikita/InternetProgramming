
@{
    ViewBag.Title = "Dohods";
}



@model IEnumerable<WeBudget.Service.Abstract.BaseEntity>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
	<title>MуBudget</title>
	<link rel="stylesheet" href="~/Content/styles.css" type="text/css" />
	<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,300" type="text/css" />
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	<title>Выравнивание фотографии по центру</title>
</head>




<style>
    .fig {
        text-align: center; /* Выравнивание по центру */
    }


    .center {
        width: 700px; /* Ширина элемента в пикселах */
        padding: 10px; /* Поля вокруг текста */
        margin: auto; /* Выравниваем по центру */
    }
</style>



<div class="container">
    <h2>Доходы</h2>


    @{ var grid = new WebGrid(Model); }
    <div>
        @grid.GetHtml(columns: grid.Columns(
                                                     grid.Column("Id", "№"),
                                                     grid.Column("Day", "День"),
                                                     grid.Column("Month", "Месяц"),
                                                     grid.Column("Sum", "Сумма"),
                                                     grid.Column("Comment", "Комментарий"),
                                                     grid.Column("Редактировать", format: @<a href="~/Dohod/EditDohod/@item.Id"> Редактировать</a>),
                                                             grid.Column("Удалить", format: @<a href="~/Dohod/DeleteDohod/@item.Id"> Удалить</a>)
                                                                     ), tableStyle: "table-bordered")
    </div>
    <input type="button" value="Добавить" onClick='location.href="CreateDohod"'>

</div>

